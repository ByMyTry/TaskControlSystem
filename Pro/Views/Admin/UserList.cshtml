@model IEnumerable<Pro.Models.UserModel>

@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-9">
        <h4>Users</h4>
        <hr />
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Login)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.UserRoleName)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Login</td>
                        <td>@user.Name</td>
                        <td>@user.UserRoleName</td>
                        <td><a href="@Url.Action("UserLogs", "Admin", new { UserId = user.Id }, null)">Logs</a></td>
                        <td><a href="@Url.Action("UserList", "Admin", new { DeleteUserId = user.Id }, null)">Delete</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


