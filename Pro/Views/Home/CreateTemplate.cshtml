@model Pro.Models.TemplateModel

@{
    ViewBag.Title = "Создание шаблона";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Создание шаблона</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ProfessorUserId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-1">
                <input name="action" type="submit" value="Создать" class="btn btn-default" />
            </div>
            <div class="col-md-2">
                <input name="action" type="submit" value="Отмена" class="btn btn-default" />
            </div>
        </div>
        <hr />
    </div>
}
