@model IEnumerable<Pro.Models.TaskModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Текущие работы</h2>
<div class="Index_create">
    (@Html.ActionLink("добавить", "CreateTask"))
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Template)            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Professor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAccepted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountChanges)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name, "Task", new { id = item.Id })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Template)
        </td>
        <td>
           @Html.DisplayFor(modelItem => item.Professor)           
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isAccepted)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CountChanges)
        </td>
        <td>
            @Html.ActionLink("редактировать", "EditTask", new { id=item.Id }) |
            @Html.ActionLink("удалить", "DeleteTask", new { id=item.Id })
        </td>
    </tr>
}

</table>
