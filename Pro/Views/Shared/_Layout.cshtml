<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - СКУ</title>    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="@Url.Content("~/scripts/jquery-3.1.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>  
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="myContainer" >
            <div >
                @Html.ActionLink("Система контроля успеваемости", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div style="display: inline-block; float: right; line-height: 50px; color: #999;">
                @if (Pro.Logic.Auth.IsAuth())
                {
                    <span> @Pro.Logic.Auth.CurrentUser().Login, @Pro.Logic.Auth.CurrentUserRole().Name | </span>
                    @Html.ActionLink("Выйти", "Logout", "Account")
                }
                else
                {
                    @Html.ActionLink("Войти", "Login", "Account") <span> | </span>
                    @Html.ActionLink("Регистрация", "Register", "Account")
                }
            </div>
        </div>
    </div>

    <div class="body-content" style="min-height: 1000px !important;">
        @RenderBody()        
    </div>
        
    <footer class="navbar navbar-inverse navbar-fixed-bottom" style="color: #999;">
        <div class="myContainer">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </div>
    </footer>
    
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>